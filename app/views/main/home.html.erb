<section class="divider-bars steam-login">
  <a href="/auth/steam"><img src="http://steamcommunity-a.akamaihd.net/public/images/signinthroughsteam/sits_small.png"></a>
</section>

<div class="or-bar">- OR -</div>

<section class="divider-bars">
  <%= form_tag span_by_name_path, :method => 'get' do %>
    <h4>Enter Steam ID:</h4>
    <div class="steam-id">
      <span class="steam-url">http://steamcommunity.com/id/</span><%= text_field_tag :steam_user %>
      <button type="submit" class="btn btn-default btn-sm" aria-label="Left Align">
        <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
      </button>
    </div>
  <% end %>
</section>

<section class="alt-color consideration">Please be sure your Steam profile is <%= link_to "publicly viewable", "https://support.steampowered.com/kb_article.php?ref=4113-YUDH-6401", target: "_blank" %>, or this will not work.</section>
